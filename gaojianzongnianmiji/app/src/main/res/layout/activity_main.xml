<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_eee"
    tools:context="com.example.administrator.gaojianzongnianmiji.base.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_147dp"
        android:background="@color/color_CF2518"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/normal_40dp"
        android:paddingRight="@dimen/normal_40dp"

        >

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="@dimen/normal_85dp"
            android:layout_height="@dimen/normal_85dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="@dimen/normal_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_20dp"
            android:layout_weight="1"
            android:text="@string/appName"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_30dp"
            tools:text="19:10 2018-03-23" />


        <!--<ImageView-->
            <!--android:id="@+id/back_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/normal_60dp"-->
            <!--android:padding="@dimen/normal_30dp"-->
            <!--android:visibility="gone"-->
            <!--android:src="@mipmap/ic_return" />-->


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_90dp"
        android:background="@color/color_CF2518"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:padding="@dimen/normal_30dp"
            android:src="@mipmap/ic_return" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_28sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/back_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_CF2518"
            android:textSize="@dimen/normal_28sp"
            android:padding="@dimen/normal_15dp"
            android:layout_marginRight="@dimen/normal_30dp"
            android:background="@drawable/shape_whrite_r30"/>
    </LinearLayout>
</LinearLayout>
