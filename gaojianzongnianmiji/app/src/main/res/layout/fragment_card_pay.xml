<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
        android:id="@+id/edit_et"
        android:layout_width="@dimen/normal_100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_1dp"
        android:layout_marginTop="@dimen/normal_100dp"
        android:layout_gravity="center_horizontal"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_44dp"
        android:background="@mipmap/img_di"
        android:gravity="center_vertical"
        >
        
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@mipmap/ic_ick"
            android:layout_marginLeft="@dimen/normal_112dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_52dp"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:text="请刷IC卡"
            android:layout_marginLeft="@dimen/normal_112dp"
            />
        
        
    </LinearLayout>

</FrameLayout>