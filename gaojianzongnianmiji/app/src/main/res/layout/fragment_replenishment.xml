<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="@dimen/normal_50dp"
        android:layout_marginLeft="@dimen/normal_40dp"
        android:layout_marginTop="@dimen/normal_39dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/normal_10dp"
            android:layout_height="@dimen/normal_34dp"
            android:background="@color/color_CF2518" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_5dp"
            android:text="补稻谷和袋子"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/normal_50dp">
    <TextView
        android:id="@+id/tv_read_rice_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取稻谷数量"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_38sp"
        android:background="@color/color_CF2518"
        android:padding="@dimen/normal_25dp" />
    <TextView
        android:id="@+id/tv_rice_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_38sp"
        android:layout_marginLeft="@dimen/normal_50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/normal_100dp"
        android:layout_marginLeft="@dimen/normal_50dp">
        <TextView
            android:id="@+id/tv_read_pack_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取袋子数量"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_38sp"
            android:background="@color/color_CF2518"
            android:padding="@dimen/normal_25dp" />
        <TextView
            android:id="@+id/tv_pack_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_38sp"
            android:layout_marginLeft="@dimen/normal_50dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_100dp">

        <EditText
            android:id="@+id/et_rice"
            android:layout_width="@dimen/normal_800dp"
            android:layout_height="@dimen/normal_120dp"
            android:background="@drawable/shape_whrite_r30"
            android:drawablePadding="@dimen/normal_10dp"
            android:hint="请输入稻谷的数量"
            android:paddingLeft="@dimen/normal_60dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_36dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/normal_60dp"
            android:text="（斤）"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_36dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_save_rice"
        android:layout_width="@dimen/normal_800dp"
        android:layout_height="@dimen/normal_120dp"
        android:layout_marginTop="@dimen/normal_60dp"
        android:background="@drawable/public_button_shape"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_36dp"
        android:textStyle="bold" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_100dp">

        <EditText
            android:id="@+id/et_pack"
            android:layout_width="@dimen/normal_800dp"
            android:layout_height="@dimen/normal_120dp"
            android:background="@drawable/shape_whrite_r30"
            android:drawablePadding="@dimen/normal_10dp"
            android:hint="请输入袋子的数量"
            android:paddingLeft="@dimen/normal_60dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_36dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/normal_60dp"
            android:text="（个）"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_36dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_save_pack"
        android:layout_width="@dimen/normal_800dp"
        android:layout_height="@dimen/normal_120dp"
        android:layout_marginTop="@dimen/normal_60dp"
        android:background="@drawable/public_button_shape"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_36dp"
        android:textStyle="bold" />


</LinearLayout>