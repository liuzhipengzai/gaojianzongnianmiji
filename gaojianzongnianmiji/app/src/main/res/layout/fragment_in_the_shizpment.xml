<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/normal_60dp"
    android:paddingRight="@dimen/normal_60dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    
    <ImageView
        android:layout_width="@dimen/normal_960dp"
        android:layout_height="@dimen/normal_960dp" 
        android:src="@mipmap/banner"
        />
    
    <TextView
        android:id="@+id/tv_rice_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="@dimen/normal_46dp"
        android:textColor="@color/color_333"
        android:text="正在碾米，请等待..."
        android:layout_marginTop="@dimen/normal_65dp"
        />

</LinearLayout>