<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="@dimen/normal_48dp"
        android:textColor="@color/color_333"
        android:textStyle="bold"
        android:text="维护登录"
        android:layout_marginTop="@dimen/normal_182dp"
        />

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="@dimen/normal_800dp"
        android:layout_height="@dimen/normal_120dp"
        android:layout_marginTop="@dimen/normal_200dp"
        android:background="@drawable/shape_huise_r30"
        android:hint="请输入手机号码"
        android:maxLength="11"
        android:inputType="number"
        android:drawableLeft="@mipmap/ic_shouji"
        android:paddingLeft="@dimen/normal_40dp"
        android:drawablePadding="@dimen/normal_10dp"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_36dp" />
    
    <EditText
        android:id="@+id/tv_password"
        android:layout_width="@dimen/normal_800dp"
        android:layout_height="@dimen/normal_120dp"
        android:layout_marginTop="@dimen/normal_50dp"
        android:background="@drawable/shape_huise_r30"
        android:hint="请输入密码"
        android:drawableLeft="@mipmap/ic_mima"
        android:paddingLeft="@dimen/normal_40dp"
        android:drawablePadding="@dimen/normal_10dp"
        android:textColor="@color/color_333"
        android:inputType="textPassword"
        android:textSize="@dimen/normal_36dp" />

    <TextView
        android:id="@+id/save_tv"
        android:layout_width="@dimen/normal_800dp"
        android:layout_height="@dimen/normal_120dp"
        android:layout_marginTop="@dimen/normal_60dp"
        android:background="@drawable/public_button_shape"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_36dp"
        android:textStyle="bold" />

</LinearLayout>