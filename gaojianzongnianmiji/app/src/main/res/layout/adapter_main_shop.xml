<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/normal_310dp"
    android:layout_height="@dimen/normal_420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/normal_38dp"
    app:cardCornerRadius="@dimen/normal_8dp"
    app:cardElevation="@dimen/normal_8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_0dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            />
        
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_98dp" 
            android:background="@color/white"
            android:textSize="@dimen/normal_38dp"
            android:textColor="@color/color_333"
            android:gravity="center"
            tools:text="胚芽米"
            />
        
        
    </LinearLayout>

</android.support.v7.widget.CardView>